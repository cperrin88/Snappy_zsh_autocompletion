# file Snappy.plugin.zsh
# contains an autocomplete function for snap in zsh
#
# created 2017-04-16
# by Franz KÃ¶nig
# modified 2018-05-23
# by Christopher Perrin

compdef _snap snap

_snap() {
  if (( CURRENT == 2 )); then
    compadd $(GO_FLAGS_COMPLETION=1 snap $words[2])
  elif (( CURRENT >= 2)); then
    if [ ! -z $words[CURRENT] ]; then
      compadd $(GO_FLAGS_COMPLETION=1 $words)
    fi
    _files -g \*.snap
  fi
}

# file Snappy.plugin.zsh
